{
    "manifest_version": 3,
    "name": "股票价格监控",
    "version": "1.0",
    "description": "监控股票价格并在达到目标区间时提醒。支持A股（沪市主板、深市主板、创业板）和美股。",
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "sidePanel",
      "tabs"
    ],
    "host_permissions": [
      
      "https://*.eastmoney.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.svg",
        "48": "images/icon48.svg",
        "128": "images/icon128.svg"
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
}